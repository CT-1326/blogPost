{
  "compilerOptions": {
    "module": "commonjs", // 모듈 시스템
    "target": "ES2021", // 컴파일 버전
    "declaration": true, // 타입 정의 파일 생성
    "sourceMap": true, // 소스맵(디버깅 시 원본코드 매핑) 파일 생성
    "removeComments": true, // 컴파일 소스 주석문 제거
    // 데코레이터 설정
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./", // 기본 경로
    "paths": { // 모듈 경로 별칭 매핑
      "@schemas/*" : [
        "src/apis/schemas/*"
      ],
      "@dto/*" : [
        "src/apis/dto/*"
      ],
      "@user/*" : [
        "src/apis/user/*"
      ],
      "@auth/*" : [
        "src/apis/auth/*"
      ],
      "@post/*" : [
        "src/apis/post/*"
      ],
      "@comment/*" : [
        "src/apis/comment/*"
      ]
    },
    "outDir": "./dist", // 빌드 경로
    "resolveJsonModule": true, // JSON import 허용
    "skipLibCheck": true, // 타입 선언 파일 검사 생략(컴파일 시간 단축)
    "forceConsistentCasingInFileNames": true, // 파일명 대소문자 일관성 강제
    "incremental": true, // 컴파일 결과 캐싱
    "allowSyntheticDefaultImports": true, // 기본 export가 없는 모듈 기본 호출 허용
    "strict": true, // 타입 검사 활성화
    "esModuleInterop" : true // CommonJS와 ES6 모듈 호환
  }
}
